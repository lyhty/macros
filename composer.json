{
    "name": "lyhty/macros",
    "description": "Helpful macros for your Laravel project.",
    "keywords": [
        "laravel",
        "macro"
    ],
    "homepage": "https://matti.suoraniemi.com/lyhty/macros",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Matti Suoraniemi",
            "email": "matti@suoraniemi.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.2",
        "illuminate/support": "^11.0 | ^12.0",
        "illuminate/console": "^11.0 | ^12.0",
        "lyhty/macronite": "^4.0",
        "lyhty/support": "^3.0"
    },
    "require-dev": {
        "orchestra/testbench": "^8.0",
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "Lyhty\\Macros\\": "src"
        },
        "files": [
            "src/constants.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Lyhty\\Macros\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Lyhty\\Macros\\MacroServiceProvider"
            ]
        }
    }
}
